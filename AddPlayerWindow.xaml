<Window x:Class="MCPetList.AddPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCPetList"
        mc:Ignorable="d"
        Title="Add a Player" ResizeMode="NoResize">
    <StackPanel>
        <StackPanel Margin="10">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Label Content="Enter a Minecraft Java Username:" VerticalAlignment="Center" />
                <TextBox x:Name="TextBoxSearch" Text="inkvoiid" Width="150" VerticalAlignment="Center" GotFocus="TextBoxSearch_GotFocus" />

                <Button x:Name="ButtonSearch" Content="Search" Margin="5" Width="55" VerticalAlignment="Center" Click="ButtonSearch_Click" IsDefault="True" />
            </StackPanel>
            <Label x:Name="LabelNameplate" Content="" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" Background="#72000000" Foreground="White" Visibility="Hidden"/>
            <Image x:Name="ImageSkinDisplay" HorizontalAlignment="Center" VerticalAlignment="Top" Height="169"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom" Background="#FFECECEC">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Height="29">
                <Button x:Name="ButtonCancel" Content="Cancel" Margin="5" Width="75" IsCancel="True" />
                <Button x:Name="ButtonAdd" Content="Add" Margin="5" Width="75" Click="ButtonAdd_Click" />
            </StackPanel>
        </StackPanel>

    </StackPanel>
</Window>
